<div class="clickableImageControls" data-image="{{imgPath}}">
	
	<div class="displayLocations">
		{{#each displayLocations as |location|}}
		<button id="{{location.name}}" data-action="{{location.name}}" title="{{location.tooltip}}">
		<i class="{{location.icon}}"></i>
	  	</button>
	  	{{/each}}
	</div>
  <fieldset class="displayTiles">
	<legend>Display tiles in scene <span class="accent">"{{currentSceneName}}"</span></legend>
    {{#each displayTiles as |tileData|}}
      <input
        type="radio"
        name="{{concat "selectedDisplayTile" @root.imgPath}}"
        data-display-name="{{tileData.tile.displayName}}"
		data-hover-action="highlight-tile"
        id="{{tileData.randomID}}"
        value="{{tileData.tile.id}}"
		{{#if @root.selectedTileID}}
			{{#if (eq @root.selectedTileID tileData.tile.id)}}
				checked	
			{{/if}}
		{{/if}}
      />
      <label for="{{tileData.randomID}}">
        {{tileData.tile.displayName}}
      </label>
    {{/each}}
  </fieldset>
</div>