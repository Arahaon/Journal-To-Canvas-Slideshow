<div class="form-group form-group-stacked">
    <div class="input-wrapper has-floating-label">
        <label class="floating-label" for="{{this.id}}">{{camelCaseToArray this.name true}}</label>
        <input
            class="flex2"
            id="{{this.id}}"
            name="{{this.name}}"
            type="{{ternary this.type 'text'}}"
            value="{{this.value}}"
            data-change-action="{{this.changeAction}}"
        />
    </div>
    {{#if (eq this.missing true)}}
       {{> (dynamicPartial "notification-badge")
        notificationType="warning"
        message="Gallery data not linked to scene tile" 
       }} 
    {{/if}}

</div>