<form autocomplete="off" class="flexcol flow">

    <header class="flex0">
        <p class="flex0">Current Scene is:
            <span class="text-accent text-heavy">{{currentSceneName}}</span>
        </p>
        <label for="artScene">Art Scene</label>
        <select name="artScene" id="artScene" data-action="setArtScene">
            {{#each artSceneData.options as |scene|}}
                <option value="{{scene.id}}"
                    {{#if (eq @root.artSceneData.value scene.id)}}
                        selected 
                    {{/if}}
                >
                    {{scene.name}}
                </option>
            {{/each}}
        </select>
        <label for="artScene">Art Journal</label>
        <select name="artJournal" id="artJournal" data-action="setArtJournal">
            {{#each allJournals as |journal|}}
                <option value="{{journal.id}}">{{journal.name}}</option>
            {{/each}}
        </select>


    </header>

    <div class="tilesInScene flow scroll-y 
                hidden-overflow-x padding-medium 
                border-block border-color-shadow
				flexrow	
				"
    >

        <details class="collapsible-wrapper" id="artTileDetails"
			{{#if (eq artDetails.open true)}}
				open
			{{/if}}
		>
            <summary>
                <h3>Art Tiles</h3>
            </summary>
            <ul class="[ flow ] [ border-styled border-hover slight-rounded ]">
                {{#each artTiles as |tile|}}
                    {{> "modules/journal-to-canvas-slideshow/templates/tile-list-item.hbs"
                        tile type="art"
                        currentSceneName=@root.currentSceneName
                        allFrameTiles=@root.frameTiles
                    }}
                {{/each}}
                {{!-- "Add New List Item" --}}
                {{> "modules/journal-to-canvas-slideshow/templates/new-tile-list-item.hbs"
                    type="art"
                    allBoundingTiles=artTiles
                }}
            </ul>
        </details>

        <details class="collapsible-wrapper" id="frameTileDetails" 
			{{#if (eq frameDetails.open true)}}
				open
			{{/if}}
		>
            <summary>
                <h3>Frame Tiles</h3>
            </summary>
            <ul class="[ flow ] [ border-styled border-hover slight-rounded ]">
                {{#each frameTiles as |tile|}}
                    {{> "modules/journal-to-canvas-slideshow/templates/tile-list-item.hbs" 
                        type="frame" 
                        currentSceneName=@root.currentSceneName
                    }}
                {{/each}}
				{{> "modules/journal-to-canvas-slideshow/templates/new-tile-list-item.hbs"
                    type="frame"
                }}

            </ul>
        </details>

    </div>
