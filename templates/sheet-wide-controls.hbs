<section class="flex-row gap-small" id="sheet-controls" data-controls-active="{{this.isActive}}" data-position="bottom-right">
    {{#each controls as |control|}}
        {{> (dynamicPartial "icon-button")
            action=control.action
            tooltipText=control.tooltip
            icon=control.icon
            extraClass=(ternary control.active "active" "")
            variant="small"
        }}
    {{/each}}
</section>