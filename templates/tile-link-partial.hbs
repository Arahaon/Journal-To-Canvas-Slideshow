<form action="">
    <label>
        Link to Tile In Scene
        <p class="notes">Choose a tile object in this scene to link this
            {{this.type}}
            data to
        </p>
        <select name="unlinkedTiles" id="unlinkedTiles" action="setLinkedTileObject">
            {{#each this.unlinkedTilesIDs as |unlinkedTileID|}}
                <option data-id="{{unlinkedTileID}}" value="{{unlinkedTileID}}">
                    Tile:
                    {{unlinkedTileID}}
                </option>
            {{/each}}
        </select>
    </label>
</form>